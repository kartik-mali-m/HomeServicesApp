@model List<HomeServicesApp.Models.Service>

@{
    ViewData["Title"] = "Home Page";
}

<style>

    /* ================= HERO SECTION ================= */

    .hero {
        background: linear-gradient(135deg, #2563eb, #1d4ed8);
        color: white;
        padding: 80px 20px;
        border-radius: 0 0 30px 30px;
    }

    @@media (max-width: 768px) {
        .hero

    {
        padding: 50px 15px;
    }

    .hero h1 {
        font-size: 24px;
    }

    .hero .lead {
        font-size: 14px;
    }

    }

    /* ================= SERVICE CARDS ================= */

    .service-card {
        border-radius: 18px;
        transition: all 0.3s ease;
        height: 100%;
        min-height: 220px;
        position: relative;
        overflow: hidden;
        background: linear-gradient(145deg, #ffffff, #f3f4f6);
        border: none;
    }

        .service-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .service-card img {
            width: 65px;
            height: 65px;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .service-card:hover img {
            transform: scale(1.1);
        }

    .service-title {
        font-weight: 600;
        margin-top: 10px;
        font-size: 16px;
    }

    .price-text {
        font-size: 14px;
        color: #6b7280;
    }

    .book-btn {
        opacity: 0;
        transition: opacity 0.3s ease;
        margin-top: 10px;
    }

    .service-card:hover .book-btn {
        opacity: 1;
    }

    /* hero section silder */

    <style >

    .hero-slider {
        position: relative;
    }

    .hero-img {
        height: 500px;
        object-fit: cover;
        filter: brightness(70%);
    }

    .carousel-caption {
        bottom: 30%;
    }

        .carousel-caption h1 {
            font-size: 42px;
            color: white;
        }

        .carousel-caption p {
            font-size: 18px;
            color: #f1f1f1;
        }

    @@media(max-width: 768px) {
        .hero-img

    {
        height: 350px;
    }

    .carousel-caption {
        bottom: 20%;
    }

        .carousel-caption h1 {
            font-size: 22px;
        }

        .carousel-caption p {
            font-size: 14px;
        }

    }

    /* Mobile adjustments */
    @@media (max-width: 576px) {
        .service-card {
            min-height: 190px;
            padding: 18px !important;
        }

            .service-card img {
                width: 50px;
                height: 50px;
            }

        .service-title {
            font-size: 14px;
        }

        .price-text {
            font-size: 12px;
        }

        .book-btn {
            font-size: 12px;
            padding: 4px 10px;
        }
    }

    /* ================= FEATURE BOX ================= */

    .feature-box {
        transition: all 0.3s ease;
        border-radius: 18px;
        border: 2px solid transparent;
    }

        .feature-box:hover {
            transform: translateY(-6px);
            border-color: gold;
            box-shadow: 0 15px 30px rgba(212, 175, 55, 0.4);
            background: linear-gradient(145deg, #ffffff, #fff8dc);
        }

        .feature-box h5 {
            transition: color 0.3s ease;
            font-size: 18px;
        }

        .feature-box:hover h5 {
            color: #b8860b;
        }

    @@media (max-width: 768px) {
        .feature-box {
            padding: 20px !important;
        }

            .feature-box h5 {
                font-size: 16px;
            }

            .feature-box p {
                font-size: 13px;
            }
    }
</style>




<section class="hero-slider position-relative">

    <div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000">

        <div class="carousel-inner">

            <!-- Slide 1 -->
            <div class="carousel-item active">
                <img src="~/images/acrepair1.jpg.jpg"  class="d-block w-100 hero-img" alt="Plumber">
                <div class="carousel-caption">
                    <h1 class="fw-bold">Expert Plumbing Services</h1>
                    <p>Professional plumbers at your doorstep</p>
                    <button class="btn btn-warning btn-lg px-4">Book Now</button>
                </div> 
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <img src="~/images/plumber.jpg.jpg" class="d-block w-100 hero-img" alt="Electrician">
                <div class="carousel-caption">
                    <h1 class="fw-bold">Certified Electricians</h1>
                    <p>Safe & Reliable Electrical Solutions</p>
                    <button class="btn btn-warning btn-lg px-4">Book Now</button>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/images/electrician.jpg.jpg" class="d-block w-100 hero-img" alt="AC Repair">
                <div class="carousel-caption">
                    <h1 class="fw-bold">AC Repair & Maintenance</h1>
                    <p>Stay Cool with Expert Technicians</p>
                    <button class="btn btn-warning btn-lg px-4">Book Now</button>
                </div>
            </div>

            <!-- Slide4 -->
            <div class="carousel-item">
                <img src="~/images/plumber.jpg.jpg"  class="d-block w-100 hero-img" alt="AC Repair">
                <div class="carousel-caption">
                    <h1 class="fw-bold">AC Repair & Maintenance</h1>
                    <p>Stay Cool with Expert Technicians</p>
                    <button class="btn btn-warning btn-lg px-4">Book Now</button>
                </div>
            </div>


        </div>

    </div>

</section>
<section class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-semibold">Popular Services</h4>
        <a href="#" class="text-decoration-none fw-semibold text-primary">
            View all
        </a>
    </div>

    <div class="row g-4">

        @foreach (var s in Model)
        {
            <div class="col-6 col-sm-6 col-md-4 col-lg-3 d-flex">
                <div class="card service-card text-center p-4 shadow-sm w-100">

                    @if (!string.IsNullOrEmpty(s.IconPath))
                    {
                        <img src="@s.IconPath" class="mx-auto mb-2" />
                    }

                    <h6 class="service-title">@s.ServiceName</h6>
                    <div class="price-text">Starting from ₹@s.Price</div>

                    <a href="#" class="btn btn-primary btn-sm book-btn">
                        Book Now
                    </a>

                </div>
            </div>
        }

    </div>

</section>

