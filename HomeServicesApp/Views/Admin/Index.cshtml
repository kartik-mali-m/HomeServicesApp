@{
}
@model List<Service>

<h3>Services</h3>
<a class="btn btn-primary mb-3" href="/Admin/AddService">Add New</a>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Icon</th>
        <th>Action</th>
    </tr>

    @foreach (var s in Model)
    {
        <tr>
            <td>@s.ServiceName</td>
            <td>₹@s.Price</td>
            <td>@s.Icon</td>
            <td>
                <a class="btn btn-sm btn-warning" href="/Admin/Edit/@s.ServiceId">Edit</a>
                <a class="btn btn-sm btn-danger" href="/Admin/Delete/@s.ServiceId">Delete</a>
            </td>
        </tr>
    }
</table>