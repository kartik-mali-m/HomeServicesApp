@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: #f4f6f9;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: #111827;
            color: white;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                padding: 10px 20px;
                color: #cbd5e1;
                text-decoration: none;
                font-size: 14px;
            }

                .sidebar a:hover {
                    background: #1f2937;
                    color: white;
                }

            .sidebar .section-title {
                padding: 10px 20px 5px;
                font-size: 12px;
                color: #9ca3af;
                text-transform: uppercase;
            }

        .main-content {
            margin-left: 250px;
            padding: 30px;
        }

        .card {
            border-radius: 14px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="p-4 border-bottom">
            <h5>Admin Panel</h5>
        </div>

        <div class="section-title">Overview</div>
        <a href="/Admin/Dashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>

        <div class="section-title">Management</div>
        <a href="/Admin/Users"><i class="bi bi-people me-2"></i> Users</a>
        <a href="/Admin/Workers"><i class="bi bi-person-badge me-2"></i> Workers</a>
        <a href="/Admin/Bookings"><i class="bi bi-calendar-check me-2"></i> Bookings</a>
        <a href="/Admin/Services"><i class="bi bi-tools me-2"></i> Services</a>
        <a href="/Admin/Problems"><i class="bi bi-list-task me-2"></i> Problems</a>

        <div class="section-title">Finance</div>
        <a href="/Admin/Revenue"><i class="bi bi-cash-stack me-2"></i> Revenue</a>
        <a href="/Admin/Reports"><i class="bi bi-bar-chart me-2"></i> Reports</a>

        <div class="section-title">Support</div>
        <a href="/Admin/Complaints"><i class="bi bi-life-preserver me-2"></i> Complaints</a>

        <div class="section-title">Access</div>
        <a href="/Admin/Roles"><i class="bi bi-shield-lock me-2"></i> Role Management</a>

        <hr class="text-secondary">
        <a href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</body>
</html>