@{
    ViewData["Title"] = "Worker Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Worker Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        /* .sidebar {
            height: 100vh;
            background: #111827;
            position: fixed;
            width: 250px;
            overflow-y: auto;
            transition: 0.3s;
        } */
        .sidebar {
            height: 100vh;
            background: #111827;
            position: fixed;
            width: 250px;
            left: 0;
            top: 0;
            overflow-y: auto;
            transition: left 0.3s ease;
            z-index: 1050;
        }
            .sidebar h5 {
                color: white;
            }

            .sidebar a {
                color: #cbd5e1;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
                font-size: 14px;
            }

                .sidebar a:hover {
                    background: #1f2937;
                    color: #fff;
                }

                .sidebar a.active {
                    background: #2563eb;
                    color: white;
                    border-left: 4px solid #60a5fa;
                }

        .main-content {
            margin-left: 250px;
            padding: 30px;
            transition: 0.3s;
        }

        .card {
            border-radius: 12px;
        }

        .dashboard-card {
            transition: 0.3s;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }

        .section-title {
            font-size: 12px;
            text-transform: uppercase;
            color: #9ca3af;
            padding: 10px 20px 5px;
        }
        @@media (max-width: 991px) {
            .sidebar

        {
            left: -250px;
        }

        .sidebar.show {
            left: 0;
        }

        .main-content {
            margin-left: 0;
        }

        .mobile-toggle {
            display: inline-block !important;
        }

        }

        .mobile-toggle {
            display: none;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-4 border-bottom">
            <h5 class="mb-0">Worker Panel</h5>
        </div>

        <div class="section-title">Dashboard</div>
        <a href="#" class="active"><i class="bi bi-speedometer2 me-2"></i> Overview</a>

        <div class="section-title">Jobs</div>
        <a asp-action="Activejob"><i class="bi bi-briefcase me-2"></i> Active Jobs</a>
        <a href="#"><i class="bi bi-check-circle me-2"></i> Completed Jobs</a>
        <a href="#"><i class="bi bi-x-circle me-2"></i> Cancelled Jobs</a>

        <div class="section-title">Availability</div>
        <a href="#"><i class="bi bi-clock me-2"></i> Working Hours</a>
        <a href="#"><i class="bi bi-toggle-on me-2"></i> Online / Offline</a>

        <div class="section-title">Earnings</div>
        <a href="#"><i class="bi bi-cash-stack me-2"></i> Earnings</a>
        <a href="#"><i class="bi bi-bar-chart me-2"></i> Reports</a>
        <a href="#"><i class="bi bi-receipt me-2"></i> Payment History</a>

        <div class="section-title">Account</div>
        <a href="#"><i class="bi bi-person me-2"></i> Profile</a>
        <a href="#"><i class="bi bi-shield-lock me-2"></i> Change Password</a>

        <div class="section-title">Support</div>
        <a href="#"><i class="bi bi-headset me-2"></i> Help Center</a>

        <hr class="text-secondary">

        <a href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">

        <!-- Top Bar -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <button class="btn btn-dark mobile-toggle" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>
            <h3>Welcome, Roshan 👋</h3>
            <span class="badge bg-success">Online</span>
        </div>

        <!-- Dashboard Cards -->
        <div class="row g-4">

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card dashboard-card shadow-sm p-3 bg-primary text-white">
                    <h6>Total Bookings</h6>
                    <h2>12</h2>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card dashboard-card shadow-sm p-3 bg-warning text-dark">
                    <h6>Pending Jobs</h6>
                    <h2>3</h2>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card dashboard-card shadow-sm p-3 bg-success text-white">
                    <h6>Completed</h6>
                    <h2>9</h2>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card dashboard-card shadow-sm p-3 bg-info text-white">
                    <h6>Total Earnings</h6>
                    <h2>₹ 8,500</h2>
                </div>
            </div>

        </div>

        <!-- Recent Bookings -->
        <div class="card mt-5 shadow-sm">
            <div class="card-header bg-dark text-white">
                Recent Bookings
            </div>

            <div class="card-body table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Service</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>24 Feb 2026</td>
                            <td>Plumbing</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>

                        <tr>
                            <td>23 Feb 2026</td>
                            <td>Electrician</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>
                                <button class="btn btn-sm btn-success">Accept</button>
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </td>
                        </tr>

                        <tr>
                            <td>22 Feb 2026</td>
                            <td>AC Repair</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script>
        function toggleSidebar() {
            var sidebar = document.querySelector(".sidebar");
            sidebar.classList.toggle("show");
        }
    </script>
</body>
</html>